            <div class="grade-slider-range-value center" style="font-size:1.2rem;padding-top: 5px"></div>
            {{ form_widget(item.weight) }}
            {{ form_errors(item.weight) }}
        </div>
        <div class="mode col s12 m12">
            {{ form_label(item.mode) }}
            {{ form_widget(item.mode) }}
            {{ form_errors(item.mode) }}
