{% extends "layout.html.twig" %}

{% block title %}
  {% trans %}organizations.page_title{% endtrans %}
{% endblock %}

{% block pagename %}
  {% trans %}organizations.mobile_header_title{% endtrans %}
{% endblock %}

{% block username %}
  {{ currentuser.firstname }}
  {{ currentuser.lastname }}
{% endblock %}

{% block css %}
  <style>
    section {
      justify-content: space-around;
      flex-grow:1;
    }

    section .btn-large {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      max-width: 500px;
      margin-bottom: 1em;
      line-height: inherit;
      margin-right: auto;
      margin-left:auto;

    }

    section .btn-large i {
      font-size: 1.2em;
      padding-bottom: .1em;
      padding-right: .3em;
    }

  </style>
{% endblock css %}


{% block content %}
  {% set manage_procs = path('manageProcesses') %}
  {% set manage_orgs = path('manageOrganizations') %}
  {% set manage_wfs = path('manageWorkerFirms') %}
  {% set manage_errors = path('manageProdErrors') %}
  <section class="c-flex-center">
    <div class="c-flex-center">
      <a class="btn-large waves-effect waves-light disabled-btn" href="{{ manage_procs }}">
        <i class="fa fa-bookmark"></i>
        {% trans %}root_management.manage_processes{% endtrans %}
      </a>
      <a class="btn-large waves-effect waves-light" href="{{ manage_wfs }}">
        <i class="fa fa-hotel"></i>
        <span>{% trans %}root_management.manage_organizations{% endtrans %}</span>
      </a>
      <a class="btn-large waves-effect waves-light" href="{{ manage_errors }}">
        <i class="fa fa-bahai"></i>
        <span>{% trans %}root_management.error_management{% endtrans %}</span>
      </a>
    
    </div>
    <div>
      <a class="btn-large waves-effect waves-light" href="{{ manage_orgs }}">
        <img class="dd-logo sm-right" src="{{ asset('lib/img/logo_dd_s_centered.png') }}">
        <span class="orange-text">{% trans %}root_management.our_clients{% endtrans %}</span>
      </a>
    </div>
  </section>
{% endblock %}

{% block javascripts %}{% endblock %}
