{% extends "layout.html.twig" %}

{% block title %}
  {% trans %}organizations.page_title{% endtrans %}
{% endblock %}

{% block pagename %}
  {% trans %}organizations.mobile_header_title{% endtrans %}
{% endblock %}

{% block username %}
  {{ currentuser.firstname }}
  {{ currentuser.lastname }}
{% endblock %}

{% block css %}
  <style>
    section {
      align-items: center;
    }

    section > .btn-large {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      max-width: 500px;
      margin-bottom: 1em;
      line-height: inherit;
    }

    section > .btn-large i {
      font-size: 1.2em;
      padding-bottom: .1em;
      padding-right: .3em;
    }
  </style>
{% endblock css %}


{% block content %}
  {% set manage_procs = path('manageProcesses') %}
  {% set manage_orgs = path('manageOrganizations') %}
  {% set manage_wfs = path('manageWorkerFirms') %}
  <section>
    <a class="btn-large waves-effect waves-light teal" href="{{ manage_procs }}">
      <i class="fa fa-bookmark"></i>
      {% trans %}root_management.manage_processes{% endtrans %}
    </a>
    <a class="btn-large waves-effect waves-light teal" href="{{ manage_wfs }}">
      <i class="fa fa-hotel"></i>
      <span>{% trans %}root_management.manage_organizations{% endtrans %}</span>
    </a>
    <a class="btn-large waves-effect waves-light teal" href="{{ manage_orgs }}">
      <i class="fa fa-handshake orange-text"></i>
      <span class="orange-text">{% trans %}root_management.our_clients{% endtrans %}</span>
    </a>
  </section>
{% endblock %}

{% block javascripts %}{% endblock %}
