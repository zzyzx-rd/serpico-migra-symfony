{% if stage|default %}
  {% include "components/stage_tooltip__item.html.twig" with { stage: stage, hasTopBorder: false } %}
{% else %}
  {% include "components/stage_tooltip__item.html.twig" with { dummyParticipants: dummyParticipants, dummyActName: dummyActName, dummySD: dummySD, dummyED: dummyED, hasTopBorder: false } %}
