<body>
{% extends "layout.html.twig" %}
{% block title %}
    {% trans %}home.page_title{% endtrans %}
{% endblock %}

{% block css %}
{% endblock %}

{%  block pagename %}
   {% trans %}home.mobile_header_title{% endtrans %}
{% endblock %}

{% block username %}
    {{ currentuser.firstname }} {{ currentuser.lastname }}
{% endblock %}
{% block content %}
    <main>
        {#<div class="menu">
        <img class="menu-icon" src="{{ asset('lib/img/logo.png') }}"/>
            <span>Serpico</span>
            <div id="homelist">
                <ul>
