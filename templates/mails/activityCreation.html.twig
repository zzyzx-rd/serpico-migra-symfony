



<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>Un Email Responsive</title>
        <style type="text/css">
            body {margin: 0; padding: 0; min-width: 100%!important;}
            .content {width: 100%; max-width: 800px;}
        </style>
    </head>
    {% block subject %}
        {% if stage is defined and stage is not null %}
            {% trans %}mails.activityCreation.stage_subject{% endtrans %} "{{ stage.name|raw }}" {% trans %}mails.activityParticipation.stage_subject_message_2{% endtrans %} "{{ stage.activity.name|raw }}"
        {% else %}
            {% trans %}mails.activityCreation.activity_subject{% endtrans %} "{{ activity.name|raw }}"
        {% endif %}
    {% endblock %}

    {% block body %}
    <body bgcolor="white">
        <table width="100%" bgcolor="white" border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    <table class="content" align="left" cellpadding="0" cellspacing="0" border="0">
                        <td>
                            <p>{% trans %}mails.hello{% endtrans %} {{ recipient.firstname }},</p>

                            {% if currentuser.role == 1 %}
                                {% if activity is defined and activity is not null %}
                                    {% if isCreatorAdministrator %}
                                        <p>{% if currentuser.id == recipient.id %}{% trans %}mails.activityCreation.administrator.creator.self.message1{% endtrans %}{% else %}{% trans %}mails.activityCreation.administrator.creator.others.message1{% endtrans %}{% endif %} "{{ activity.name|raw }}" {% trans %}mails.activityCreation.administrator.creator.message2{% endtrans %}</p>
                                    {% else %}
                                        <p>{% trans %}mails.activityCreation.administrator.non_creator.message1a{% endtrans %} "{{ activity.name|raw }}" {% trans %}mails.activityCreation.administrator.non_creator.message1b{% endtrans %} {{ currentuser.firstname }} {{ currentuser.lastname }}{% trans %}mails.activityCreation.administrator.non_creator.message2{% endtrans %}</p>
                                    {% endif %}
                                {% else %}
                                    {% if isCreatorAdministrator %}
                                        <p>{% if currentuser.id == recipient.id %}{% trans %}mails.activityCreation.administrator.creator.self.message1{% endtrans %}{% else %}{% trans %}mails.activityCreation.administrator.creator.others.message1{% endtrans %}{% endif %} "{{ stage.activity.name|raw }}" {% trans %}mails.activityCreation.administrator.creator.message2{% endtrans %}</p>
                                    {% else %}
                                        <p>{% trans %}mails.activityCreation.administrator.non_creator.message1a{% endtrans %} "{{ stage.name|raw }}" {% trans %}mails.activityParticipation.message_stg_mid{% endtrans %} "{{stage.activity.name|raw}}" {% trans %}mails.activityCreation.administrator.non_creator.message1b{% endtrans %} {{ currentuser.firstname }} {{ currentuser.lastname }}{% trans %}mails.activityCreation.administrator.non_creator.message2{% endtrans %}</p>
                                    {% endif %}
                                {% endif %}
                            {% else %}
                                {% if activity is defined and activity is not null %}                                
                                    <p>{% trans %}mails.activityCreation.creator.message1{% endtrans %} "{{ activity.name|raw }}" {% trans %}mails.activityCreation.creator.message2{% endtrans %}</p>
                                {% else %}
                                    <p>{% trans %}mails.activityCreation.creator.message1{% endtrans %} "{{ stage.name|raw }}" {% trans %}mails.activityParticipation.message_stg_mid{% endtrans %} "{{stage.activity.name|raw}}" {% trans %}mails.activityCreation.creator.message2{% endtrans %}</p>
                                {% endif %}
                            {% endif %}

                            {% if activity is defined and activity is not null %}
                                {% set id = activity.id %}
                            {% else %}
                                {% set id = stage.activity.id %}
                            {% endif %}
                            <p style="text-align: center"><a href="{{ url('trackMLinkClick',{'trkToken' : trkToken}) }}" target="_blank"><button style="background-color: #55318e; height: 40px; line-height: 40px; text-decoration: none; color: #ff9300; text-align: center; border: none;padding: 0 20px; border-radius:3px;font-weight:600;text-transform:uppercase;">{% trans %}mails.activityCreation.button_text{% endtrans %}</button></a></p>

                            {% if currentuser.role == 1 %}
                                <p>{% trans %}mails.activityCreation.administrator.final_msg{% endtrans %}</p>
                            {% else %}
                                <p>{% trans %}mails.activityCreation.creator.message3{% endtrans %}</p>
                            {% endif %}

                            <p>{% trans %}mails.see_you_soon{% endtrans %}</p>
                        </td>
                        </tr>
                        <tr>
                            <td>
                                <p>{% trans %}mails.signature_team{% endtrans %}</p>
                                <img src="cid:logo_img" alt="logo {{ company_name }}" style="width: {{ logo_width_px }}px">
                                <p style="margin:0;"><strong>{{ 'mails.dealdrive_motto'|trans }}</strong><br>{{ address }} |Â {{ zipcode_city }}</p>
                                {% if company_name == 'Serpico' %}<p>{{ phone }}</p>{% endif %}   
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </body>
    {% endblock %}
</html>