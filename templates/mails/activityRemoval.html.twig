<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>Un Email Responsive</title>
        <style type="text/css">
            body {margin: 0; padding: 0; min-width: 100%!important;}
            .content {width: 100%; max-width: 800px;}
        </style>
    </head>

    {% block subject %}
        {% if activity is defined and activity is not null %}
            {% trans %}mails.activityRemoval.activity_subject{% endtrans %} "{{ activity.name|raw }}"
        {% else %}
            {% trans %}mails.activityRemoval.stage_subject_message_1{% endtrans %} "{{ stage.name|raw }}" {% trans %}mails.activityRemoval.stage_subject_message_2{% endtrans %} "{{ stage.activity.name|raw }}"
        {% endif %}
    {% endblock %}

    {% block body %}
    <body bgcolor="white">
        <table width="100%" bgcolor="white" border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    <table class="content" align="left" cellpadding="0" cellspacing="0" border="0">
                        <td>
                            <p>{% trans %}mails.hello{% endtrans %} {{ recipient.firstname }},</p>
                            {% if activity is defined and activity is not null %}
                                <p>{% trans %}mails.activityRemoval.message_act_removal{% endtrans %} "{{ activity.name|raw }}" {% trans %}mails.activityRemoval.message_end{% endtrans %}</p>
                            {% else %}
                                <p>{% trans %}mails.activityRemoval.message_stg_removal{% endtrans %} "{{ stage.name|raw }}" {% trans %}mails.activityRemoval.message_stg_mid{% endtrans %} "{{ stage.activity.name|raw }}" {% trans %}mails.activityRemoval.message_end{% endtrans %}</p>
                            {% endif %}
                            <p>
                                {% trans %}mails.activityRemoval.message3_participant{% endtrans %}
                            </p>

                            {% if message is defined and message.content is not null %}
                                <p>
                                    {% trans %} mails.activityRemoval.message4 {% endtrans %}<br>
                                    {{ message.content }}
                                </p>
                            {% endif %}
                            <p>{% trans %}mails.see_you_soon{% endtrans %}</p>
                        </td>
                        </tr>
                        <tr>
                            <td>
                               <p>{% trans %}mails.signature_team{% endtrans %}</p>
                                <img src="cid:logo_img" alt="logo {{ company_name }}" style="width: {{ logo_width_px }}px">
                                <p style="margin:0;"><strong>{{ 'mails.dealdrive_motto'|trans }}</strong><br>{{ address }} |Â {{ zipcode_city }}</p>
                                
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </body>
    {% endblock %}
</html>