<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Un Email Responsive</title>
    <style type="text/css">
        body {margin: 0; padding: 0; min-width: 100%!important;}
        .content {width: 100%; max-width: 800px;}
    </style>
</head>

{% block subject %}
    {% trans %}mails.validateProcess.subject{% endtrans %} "{{ process.name|raw }}"
{% endblock %}

{% block body %}
<body bgcolor="white">
<table width="100%" bgcolor="white" border="0" cellpadding="0" cellspacing="0">
    <tr>
        <td>
            <table class="content" align="left" cellpadding="0" cellspacing="0" border="0">
                <td>
                    <p>{% trans %}mails.hello{% endtrans %} {{ recipient.firstname }},</p>
                    <p>{% trans %}mails.validateProcess.message1{% endtrans %}</p>
                    {% if initialProcessName != process.name %}
                        <p>{{'validateProcess.message_changed_name'|trans}} "{{ process.name|raw }}" ({{'validateProcess.message_previous_choice'|trans }} "{{initialProcessName}}" )
                    {% endif %}
                    {% if initialProcessParent != process.parent %}
                        {% if parent is not null %
                            <p>{{'validateProcess.message_changed_parent'|trans}} "{{ process.parent.name|raw }}" ({{'validateProcess.message_previous_choice'|trans}} "{{initialProcessParent.name}}")
                        {% else %}
                            <p>{{'validateProcess.message_changed_primary_parent'|trans}} ({{'validateProcess.message_previous_choice'|trans}} "{{initialProcessParent.name}}")
                        {% endif %}
                    {% endif %}
                    <p style="text-align: center"><a href="{{ url('trackMLinkClick',{'trkToken' : trkToken}) }}" target="_blank"><button style="background-color: #55318e; height: 40px; line-height: 40px; text-decoration: none; color: #ff9300; text-align: center; border: none;padding: 0 20px; border-radius:3px;">{% trans %}mails.validateProcess.button_text{% endtrans %}</button></a></p>
                    <p>{% trans %}mails.validateProcess.message2{% endtrans %}</p><br>
                    {#<p>{% trans %}mails.see_you_soon{% endtrans %}</p>#}
                </td>
                </tr>
                <tr>
                    <td>
                        {% if company_name == 'Serpico' %}<p>{% trans %}mails.signature_team{% endtrans %}</p>{% endif %}
                        {% if company_name == 'Serpico' %}<a href="{{ company_website }}" style="width: 60px">{% endif %}<img src="cid:logo_img" alt="logo {{ company_name }}" style="width: {{ logo_width_px }}px">{% if company_name == 'Serpico' %}</a>{% endif %}
                        <p class="margin:0;"><strong>{{ company_name }}</strong><br>{{ address }} | {{ zipcode_city }}</p>
                        {% if company_name == 'Serpico' %}<p>{{ phone }}</p>{% endif %}
                        {% if company_name == 'Serpico' %}<img src="{{ incubator_logo }}" alt="logo Lux Future Lab" style="width: 80px">{% endif %}
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
</body>
{% endblock %}
</html>