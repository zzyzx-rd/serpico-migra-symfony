<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>Un Email Responsive</title>
        <style type="text/css">
            body {margin: 0; padding: 0; min-width: 100%!important;}
            .content {width: 100%; max-width: 800px;}
        </style>
    </head>

    {% block subject %}
        {% if forAdministrators %}
            {% trans %}mails.firstMailReminderTPeriod.subject_admin{% endtrans %}
        {% else %}
            {% trans %}mails.firstMailReminderTPeriod.subject_non_admin{% endtrans %}
        {% endif %}
    {% endblock %}

    {% block body %}
    <body bgcolor="white">
        <table width="100%" bgcolor="white" border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    <table class="content" align="left" cellpadding="0" cellspacing="0" border="0">
                        <tr>
                            <td>
                                <p>{% trans %}mails.hello{% endtrans %} {{ recipient.firstname }},</p>
                                <p>
                                    {% if forAdministrators %}
                                        {% trans %}mails.firstMailReminderTPeriod.message1_admin{% endtrans %}
                                    {% else %}
                                        {% trans %}mails.firstMailReminderTPeriod.message1_non_admin{% endtrans %}
                                    {% endif %}
                                </p>

                            </td>
                        </tr>
                        <tr>
                            <td>
                                <img src="{{ people_working_logo }}" alt="people-working" style="height: 250px">
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p style="text-align: center"><a href="{{ url('login') }}" target="_blank"><button style="background-color: #26a69a; height: 40px; line-height: 40px; text-decoration: none; color: #fff; text-align: center; border: none;">{% trans %}mails.firstMailReminderTPeriod.button_text{% endtrans %}</button></a></p>
                                <p>{% trans %}mails.firstMailReminderTPeriod.message2{% endtrans %} <strong>{{ expiringDate|localizeddate('long', 'none') }}</strong></p>
                                <p>{% trans %}mails.see_you_soon{% endtrans %}</p><br>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                {% if company_name == 'Serpico' %}<p>{% trans %}mails.signature_team{% endtrans %}{#{% else %}{% trans %}mails.signature_team_for_client{% endtrans %}#}</p>{% endif %}
                                {% if company_name == 'Serpico' %}<a href="{{ company_website }}" style="width: 60px">{% endif %}<img src="{{ logo_img }}" alt="logo {{ company_name }}" style="width: {{ logo_width_px }}px">{% if company_name == 'Serpico' %}</a>{% endif %}
                                <p><strong>{% if company_name == 'Serpico' %}{% trans %}mails.serpico_motto{% endtrans %}{% else %}{{ company_name }}{% endif %}</strong><br>{{ address }} |Â {{ zipcode_city }}</p>
                                {% if company_name == 'Serpico' %}<p>{{ phone }}</p>{% endif %}
                                {% if company_name == 'Serpico' %}<img src="{{ incubator_logo }}" alt="logo Lux Future Lab" style="width: 80px">{% endif %}
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </body>
    {% endblock %}
</html>