<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>Un Email Responsive</title>
        <style type="text/css">
            body {margin: 0; padding: 0; min-width: 100%!important;}
            .content {width: 100%; max-width: 800px;}
        </style>
    </head>

    {% block subject %}
        {% if stage.activity.stages|length == 1 %}{% trans %}mails.gradingDeadlineReminder.subject_activity_results{% endtrans %} "{{ stage.activity.name }}"{% else %}{% trans %}mails.gradingDeadlineReminder.subject_stage_results{% endtrans %} "{{ stage.name }}" ({{ stage.activity.name }}){% endif %}
    {% endblock %}

    {% block body %}
    <body bgcolor="white">
        <table width="100%" bgcolor="white" border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    <table class="content" align="left" cellpadding="0" cellspacing="0" border="0">
                        <td>
                            <p>{% trans %}mails.hello{% endtrans %} {{ recipient.firstname }},</p>
                            <p>
                                {% if stage.activity.stages|length == 1 %}
                                    {% trans %}mails.gradingDeadlineReminder.message1_activity{% endtrans %} {{ stage.activity.name|raw }} {% trans %}mails.gradingDeadlineReminder.message2a{% endtrans %} {{ stage.deadlineNbDays }} {% trans %}mails.gradingDeadlineReminder.message2b{% endtrans %}
                                {% else %}
                                    {% trans %}mails.gradingDeadlineReminder.message1a_stage{% endtrans %} "{{ stage.name|raw }}" {% trans %}mails.gradingDeadlineReminder.message1b_stage{% endtrans %} "{{ stage.activity.name|raw }}" {% trans %}mails.gradingDeadlineReminder.message2a{% endtrans %} {{ stage.deadlineNbDays }} {% trans %}mails.gradingDeadlineReminder.message2b{% endtrans %}
                                {% endif %}
                            </p>
                            <p style="text-align: center"><a href="{{ url('trackMLinkClick',{'trkToken' : trkToken}) }}" target="_blank"><button style="background-color: #55318e; height: 40px; line-height: 40px; text-decoration: none; color: #ff9300; text-align: center; border: none;padding: 0 20px; border-radius:3px;">{% trans %}mails.gradingDeadlineReminder.button_text{% endtrans %}</button></a></p>
                            <p>{% trans %}mails.gradingDeadlineReminder.message3{% endtrans %}</p>
                            <p>{% trans %}mails.see_you_soon{% endtrans %}</p><br>
                        </td>
                        </tr>
                        <tr>
                            <td>
                                {% if company_name == 'Serpico' %}<p>{% trans %}mails.signature_team{% endtrans %}</p>{% endif %}
                                {% if company_name == 'Serpico' %}<a href="{{ company_website }}" style="width: 60px">{% endif %}<img src="cid:logo_img" alt="logo {{ company_name }}" style="width: {{ logo_width_px }}px">{% if company_name == 'Serpico' %}</a>{% endif %}
                                <p class="margin:0;"><strong>{{ company_name }}</strong><br>{{ address }} |Â {{ zipcode_city }}</p>
                                {% if company_name == 'Serpico' %}<p>{{ phone }}</p>{% endif %}
                                {% if company_name == 'Serpico' %}<img src="{{ incubator_logo }}" alt="logo Lux Future Lab" style="width: 80px">{% endif %}
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </body>
    {% endblock %}
</html>