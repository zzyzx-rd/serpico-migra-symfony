<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>Un Email Responsive</title>
        <style type="text/css">
            body {margin: 0; padding: 0; min-width: 100%!important;}
            .content {width: 100%; max-width: 800px;}
        </style>
    </head>

    {#}
    {% if stage.activity.stages|length == 1 %}
        {% set elmtType = 'stage' %}
        {% set elmtName = stage.activity.name %}
    {% else %}
        {% set elmtType = 'activity' %}
        {% set elmtName = stage.name %}
    {% endif %}

    {% if stage.progress == -1 %}
        {% set pStatus = 'unstarted' %}
    {% elseif stage.progress == -3 and stage.reopened %}
        {% set pStatus = 'unfinished' %}
    {% else %}
        {% set pStatus = 'uncompleted' %}
    {% endif %}
    #}

    {% block subject %}
        {{ stage.activity.stages|length == 1 ? 'mails.updateProgressStatus.subject_activity'|trans : 'mails.updateProgressStatus.subject_stage'|trans }} "{{ stage.activity.stages|length == 1 ? stage.activity.name : stage.name }}"
    {% endblock %}

    {% block body %}
    <body bgcolor="white">
        <table width="100%" bgcolor="white" border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    <table class="content" align="left" cellpadding="0" cellspacing="0" border="0">
                        <td>
                            <p>{% trans %}mails.hello{% endtrans %} {{ recipient.firstname }},</p>
                            <p>
                                {% if stage.progress == -1 %}
                                    {{ stage.activity.stages|length == 1 ? 'mails.updateProgressStatus.message_activity_unstarted'|trans : 'mails.updateProgressStatus.message_stage_unstarted'|trans }}
                                {% elseif stage.progress == -3 and stage.reopened %}
                                    {{ stage.activity.stages|length == 1 ? 'mails.updateProgressStatus.message_activity_uncompleted'|trans : 'mails.updateProgressStatus.message_stage_uncompleted'|trans }}
                                {% else %}
                                    {{ stage.activity.stages|length == 1 ? 'mails.updateProgressStatus.message_activity_unfinished'|trans : 'mails.updateProgressStatus.message_stage_unfinished'|trans }}
                                {% endif %}
                            </p>
                            <p style="text-align: center"><a href="{{ url('trackMLinkClick',{'trkToken' : trkToken}) }}" target="_blank"><button style="background-color: #55318e; height: 40px; line-height: 40px; text-decoration: none; color: #ff9300; text-align: center; border: none;padding: 0 20px; border-radius:3px;">{% trans %}mails.updateProgressStatus.button_text{% endtrans %}</button></a></p>
                            <p>{% trans %}mails.see_you_soon{% endtrans %}</p><br>
                        </td>
                        </tr>
                        <tr>
                            <td>
                                {% if company_name == 'Serpico' %}<p>{% trans %}mails.signature_team{% endtrans %}</p>{% endif %}
                                {% if company_name == 'Serpico' %}<a href="{{ company_website }}" style="width: 60px">{% endif %}<img src="cid:logo_img" alt="logo {{ company_name }}" style="width: {{ logo_width_px }}px">{% if company_name == 'Serpico' %}</a>{% endif %}
                                <p class="margin:0;"><strong>{{ company_name }}</strong><br>{{ address }} |Â {{ zipcode_city }}</p>
                                {% if company_name == 'Serpico' %}<p>{{ phone }}</p>{% endif %}
                                {% if company_name == 'Serpico' %}<img src="{{ incubator_logo }}" alt="logo Lux Future Lab" style="width: 80px">{% endif %}
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </body>
    {% endblock %}
</html>