<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>
        {% block subject %}
            {% set stageEl = stage is defined and stage is not null ? stage : activity.stages.first %}
            {% set formattedSD = stageEl.startdate|format_datetime('short', 'none', pattern='dd/MM') %}
            {% set formattedED = stageEl.enddate|format_datetime('short', 'none', pattern='dd/MM') %}
            {% set moreThanADay = stageEl.enddate.diff(stageEl.startdate).days > 0 %}
            {% if stage is defined and stage is not null %}
                {{ 'mails.activityParticipation.stage_subject_message_1'|trans ~ stage.name|raw ~ 'mails.activityParticipation.stage_subject_message_2'|trans ~ stage.activity.name|raw ~ 
                (teamParticipation is defined ? 'mails.activityParticipation.subject_team_suffix'|trans : '') ~
                '(' ~ (moreThanADay ? 'from_date'|trans ~ ' ' ~ formattedSD ~ 'to_date'|trans ~ ' ' ~ formattedED : formattedSD) ~ ')'
                }}
            {% else %}
                {{ 'mails.activityParticipation.activity_subject'|trans ~ activity.name|raw ~ (teamParticipation is defined ? 'mails.activityParticipation.subject_team_suffix' : '') ~
                '(' ~ (moreThanADay ? 'from_date'|trans ~ ' ' ~ formattedSD ~ 'to_date'|trans ~ ' ' ~ formattedED : formattedSD) ~ ')'
                }}
            {% endif %}
        {% endblock %}
        </title>
        <style type="text/css">
            body {margin: 0; padding: 0; min-width: 100%!important;}
            .content {width: 100%; max-width: 800px;}
        </style>
    </head>

    {% block body %}
        {% set stageEl = stage is defined and stage is not null ? stage : activity.stages.first %}
        {% set formattedSD = stageEl.startdate|format_datetime('short', 'none', pattern='dd/MM') %}
        {% set formattedED = stageEl.enddate|format_datetime('short', 'none', pattern='dd/MM') %}
        {% set moreThanADay = stageEl.enddate.diff(stageEl.startdate).days > 0 %}
    <body bgcolor="white">
        <table width="100%" bgcolor="white" border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    <table class="content" align="left" cellpadding="0" cellspacing="0" border="0">
                        <td>
                            <p>{% trans %}mails.hello{% endtrans %} {{ recipient.firstname }},</p>
                        
                            <p>
                                {{'mails.activityParticipation.message_act_begin'|trans ~ ' "' ~ 
                                        (activity is defined and activity is not null ? activity.name|raw : stage.name|raw) ~ 
                                    '" ' ~ 'by'|trans ~ ' ' ~ currentuser.fullname ~ 
                                        (currentuser.organization.id != recipient.organization.id ? 'from'|trans ~ currentuser.organization.commname : '') ~ 
                                    ' (' ~ 'initial_dates'|trans ~ ' : ' ~ 
                                        (moreThanADay ? formattedSD ~ ' - ' ~ formattedED : formattedSD) ~  
                                '). ' ~ 'mails.activityParticipation.message_end'|trans ~ ':'
                                }}
                            </p>
                          
                            <p style="text-align: center"><a href="{{ url('trackMLinkClick',{'trkToken' : trkToken}) }}" target="_blank"><button style="background-color: #55318e; height: 40px; line-height: 40px; text-decoration: none; color: #ff9300; text-align: center; border: none;padding: 0 20px; border-radius:3px;font-weight:600;text-transform:uppercase;">{% trans %}mails.activityParticipation.button_text{% endtrans %}</button></a></p>
                            <p>
                                {% trans %}mails.activityParticipation.message3_participant{% endtrans %}
                            </p>
                            <p>{% trans %}mails.see_you_soon{% endtrans %}</p>
                        </td>
                        </tr>
                        <tr>
                            <td>
                               <p>{% trans %}mails.signature_team{% endtrans %}</p>
                                <a href="{{ company_website }}" style="width: 110px"><img src="cid:logo_img" alt="logo {{ company_name }}" style="width: {{ logo_width_px }}px"></a>
                                <p style="margin:0;"><strong>{{ 'mails.dealdrive_motto'|trans }}</strong></strong><br>{{ address }} |Â {{ zipcode_city }}</p>
                                {% if company_name == 'Serpico' %}<p>{{ phone }}</p>{% endif %}
                                
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </body>
    {% endblock %}
</html>