              <div class="stage-item-name">
                <div class="meta">
                  <div class="stage-dates">
                    <i class="fa fa-calendar"></i>
                  </div>
                </div>
                <div class="name">
                  <span class="stage-name-field">{{'activity_elements.evaluated_stages'|trans}}</span>
