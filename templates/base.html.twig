<div id="waitingSpinner" class="modal">
    <div class="modal-content" style="text-align: center">
        <div class="spinninAround"></div>
        <p>{% trans %}please_wait{% endtrans %}</p>
    </div>
</div>

<div id="languageModal" class="modal">
    <h5 style="color:white;">{{ "language.choose"|trans }}</h5>
    <ul>
        <li><a class="btn" href="{{ path('change_locale', {'locale': 'en'}) }}" style="margin-top:15px; width:70%;margin-left:15%"><img style="height: 30px;" src="{{ asset('lib/img/FlagEngland.png') }}" alt="english"> English</a></li>
        <li><a class="btn" href="{{ path('change_locale', {'locale': 'fr'}) }}" style="margin-top:10px; width:70%;margin-left:15%"><img style="height: 30px;" src="{{ asset('lib/img/FlagFrance.png') }}" alt="français"> Français</a></li>
    </ul>
</div>
{% block footer %}
