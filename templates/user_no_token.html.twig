{% block javascripts %}
  <script>
    
    $(function(){
      $('input[type="email"]').on('keyup',function(){
          if(isEmail($(this).val())){
            $('.email-field button').removeClass('btn-disabled');
          }
      })
    })
  
  </script>
{% endblock %}
