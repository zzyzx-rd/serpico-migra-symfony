{% extends "layout.html.twig" %}

{% block title %}
    {% trans %}about.page_name{% endtrans %}
{% endblock %}

{% block css %}
  <!-- Slick slider -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

  <script>
        var rurl = "{{ path('resetPassword') }}";
  </script>
{% endblock %}




  {% block username %}
      {% if currentuser is not null %}
      {{ currentuser.firstname }} {{ currentuser.lastname }}
      {% endif %}
  {% endblock %}


{% block pagename %}
     {% trans %}about.mobile_header_title{% endtrans %}
{% endblock %}

{% block content %}

  <section>
      <div id="team" class="container">
        <div class="section">
          <div class="row">
            <div class="col s12">
              <h3><i class="mdi-content-send brown-text"></i></h3>
              <h4 class="center">{% trans %}landing.team_section.title{% endtrans %}</h4>
              <div class="col s12 m6">
                <img class="profile" src="{{ asset('lib/img/gc2.jpg')}}" alt="Guillaume Chatelain">
                <p class="center">Guillaume Chatelain</p>
                <p class="center">{% trans %}landing.team_section.position_gc{% endtrans %}</p>
                <p class="light quote">&laquo {% trans %}landing.team_section.quote_gc{% endtrans %} &raquo</p>
              </div>
              <div class="col s12 m6">
                <img class="profile" src="{{ asset('lib/img/am.jpg')}}" alt="Aurélien Mojak">
                <p class="center">Aurélien Mojak</p>
                <p class="center">{% trans %}landing.team_section.position_am{% endtrans %}</p>
                <p class="light quote">&laquo {% trans %}landing.team_section.quote_am{% endtrans %} &raquo</p>
              </div>
            </div>
        </div>
        <h4 class="center">{% trans %}landing.contact_section.location{% endtrans %}</h4>

        <div class="row center map-responsive">
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2585.3636019834125!2d6.124312615701123!3d49.609749479368254!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x479548d4dd43279d%3A0x899f60979376dad1!2s59+Boulevard+Royal%2C+2449+Luxembourg!5e0!3m2!1sfr!2sfr!4v1557704640252!5m2!1sfr!2sfr" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
      </div>


  </section>





  <div id="login" class="modal {% if error %}error{% endif %}">
    <form id="formLogin" action="{{ path('admin_login_check') }}" method="post" class="container">
      <div class="modal-content row">
        <h4>Login</h4>
          {{ error }}
        <div class="input-field">
          <input type="text" name="_username" placeholder="{% trans %}landing.login_section.username{% endtrans %}" value="{{ last_username }}" required="required"/>
        </div>
        <div class="input-field">
          <input type="password" name="_password" placeholder="{% trans %}landing.login_section.password{% endtrans %}" value="" required="required"/>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">
      <div>
          <input type="checkbox" class="filled-in" id="remember_me" name="_remember_me" checked />
          <label for="remember_me">{% trans %}landing.keep_me_logged_in{% endtrans %}</label>
      </div>
      </div>
      <div class="modal-footer row">
        <a class=modal-trigger href="#retrievePwd">{% trans %}landing.retrieve_pwd.link_msg{% endtrans %}</a>
        <button class="btn waves-effect waves-light" type="submit" name="_target_path" value="home">{% trans %}landing.login_section.button_text{% endtrans %}</button>
      </div>
    </form>
  </div>
  <div id="retrievePwd" class="modal">
    <div class="container">
      <div class="modal-content">
        <p>{% trans %}landing.retrieve_pwd.msg{% endtrans %}</p>
        <p>{% trans %}landing.retrieve_pwd.msg_2{% endtrans %}</p>
      </div>
      <form id=retrievePwdForm action="" method="post">
        <input type="email" name="email" required="required"/>
        <div class="modal-footer">
          <button type="submit" name="" value="home" class="btn waves-effect waves-light modal-close">{% trans %}landing.retrieve_pwd.submit{% endtrans %}</button>
        </div>
      </form>
    </div>
  </div>
  <div id="retrievePwdSuccess" class="modal">
    <div class="modal-content">
      <p>{% trans %}landing.retrieve_pwd.success_msg{% endtrans %}</p>
    </div>
    <div class="modal-footer">
      <button class="btn waves-effect waves-light modal-close">{% trans %}Ok{% endtrans %}</button>
    </div>
  </div>

    {% endblock %}


    {% block javascripts %}
      <script src="{{ absolute_url(asset('js/home.js')) }}"></script>
      <script src="{{ absolute_url(asset('js/landing.js')) }}"></script>
    {% endblock %}
