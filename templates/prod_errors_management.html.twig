{% extends "layout.html.twig" %}

{% block title %}
{% trans %}contact.page_title{% endtrans %}
{% endblock %}

{% block css %}

<style>
    table{
        width:90%;
        margin:auto;
    }

    .solved-btn{
        padding: 0rem 0.5rem!important;
        line-height: 27px;
        height: 27px;
    }

    [type="checkbox"] + label {
        padding-left: 20px;
    }

</style>
{% endblock %}

{% block pagename %}
    Contact
{% endblock %}

{% block content %}

    <h4 class="center">Gestion des erreurs</h4>

    <table class="highlight">
        <thead>
            <th>#</th>
            <th>Date</th>
            <th>L</th>
            <th>M</th>
            <th>URI</th>
            <th>Route</th>
            <th>Ref</th>
            <th>A</th>
            <th>Line</th>
            <th>File</th>
            <th>Message</th>
            <th><i class="fa fa-paper-plane"></i></th>
            <th><i class="fa fa-comment-dots"></i></th>
            <th class="flex-center"><i class="fa fa-gavel"></i></th>
        </thead>
        <tbody>
            {% for k,error in errors %}
                <tr>
                    <td>{{k+1}}</td>
                    <td>{{error.inserted|format_datetime('short','none',pattern='dd/MM HH:mm:ss')}}</td>
                    <td>{{error.locale}}</td>
                    <td>{{error.method}}</td>
                    <td>{{error.requestURI}}</td>
                    <td>{{error.route}}</td>
                    <td>{{error.referer}}</td>
                    <td>
                        {% if 'Mobile' in error.agent %}
                            <i class="fa fa-mobile-alt"></i>
                        {% else %}
                            <i class="fa fa-desktop"></i>
                        {% endif %}
                    </td>
                    <td>{{error.file}}</td>
                    <td>{{error.line}}</td>
                    <td>{{error.message}}</td>
                    <td>
                        <input type="checkbox" id="commented-{{error.id}}" class="filled-in">
                        <label for="commented-{{error.id}}"></label>
                    </td>            
                    <td>
                        <input type="checkbox" id="solved-{{error.id}}" class="filled-in">
                        <label for="solved-{{error.id}}"></label>
                    </td>            
                    <td>
                        <a href="" class="btn solved-btn">
                            <i class="fa fa-check"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
   
   </table>

{% endblock %}


{% block javascripts %}

{% endblock %}
