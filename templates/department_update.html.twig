

{% extends "layout.html.twig" %}

{% block title %}
    {% trans %}department_update.page_title{% endtrans %}
{% endblock %}

{% block pagename %}
    {% trans %}department_update.mobile_header_title{% endtrans %}
{% endblock %}

{% block css %}
{% endblock %}

{% block content %}
    <div class="container user-update">
        <h4>{% trans %}department_update.main_msg{% endtrans %}</h4>
        {{ form_start(form) }}
        <div class="row">
            <div class="input-field col s12 m6">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                <div class="red-text">
                    {{ form_errors(form.name) }}
                </div>
            </div>
        </div>
        <div class="row action-buttons">
            <div class="button-field">
                <a class="btn-large waves-effect waves-light teal lighten-1" href="{{ url('settingsUsers') }}">{% trans %}department_update.back{% endtrans %}</a>
            </div>
            <div class="button-field">
                {{ form_row(form.submit) }}
            </div>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}
