      </ul>
        </div>
      <div class="col m12 l12 s12 center">
        <p class="center">{% trans %}solution.first_explaining_paragraph{% endtrans %}</p>
      </div>
    <div class="col s12 m9 l10">

      <div id="secureBusiness" class="section scrollspy">
        {#<img class="misunderstanding-filter" src="{{ absolute_url(asset('lib/img/misunderstanding.png')) }}" alt="">#}
        <div style="margin:20px 0px 30px 0px">
          <h4 style="display: inline">{% trans %}solution.secure_business.title{% endtrans %}</h4>
           <span style="position: relative;display:inline-block;margin:0px 10px 0px 15px">
            <img src="{{ absolute_url(asset('lib/img/client.png')) }}" class="tooltipped" data-position="top" data-tooltip="{% trans %}solution.client{% endtrans %}" data-delay="50" width="25px" height="25px">
            <div class="reduced-user-filter" style="background-color:blue"></div>
          </span>
          <span style="position: relative;display:inline-block;margin:0px 10px 0px 5px">
            <img src="{{ absolute_url(asset('lib/img/manager.png')) }}" class="tooltipped" data-position="top" data-tooltip="{% trans %}solution.manager{% endtrans %}" data-delay="50" width="25px" height="25px">
            <div class="reduced-user-filter" style="background-color:indigo"></div>
          </span>
          <span style="position: relative;display:inline-block;margin:0px 5px 0px 5px">
            <img src="{{ absolute_url(asset('lib/img/decider.png')) }}" class="tooltipped" data-position="top" data-tooltip="{% trans %}solution.decider{% endtrans %}" data-delay="50" width="25px" height="25px">
