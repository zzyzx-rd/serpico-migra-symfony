            <span style="position: relative;display:inline-block;margin:0px 10px 0px 15px">
              <img src="{{ absolute_url(asset('lib/img/decider.png')) }}" class="tooltipped" data-position="top" data-tooltip="{% trans %}solution.decider{% endtrans %}" data-delay="50" width="25px" height="25px">
              <div class="reduced-user-filter" style="background-color:green"></div>
            </span>
            <span style="position: relative;display:inline-block;margin:0px 10px 0px 5px">
              <img src="{{ absolute_url(asset('lib/img/manager.png')) }}" class="tooltipped" data-position="top" data-tooltip="{% trans %}solution.manager{% endtrans %}" data-delay="50"width="25px" height="25px">
              <div class="reduced-user-filter" style="background-color:indigo"></div>
            </span>
            <span style="position: relative;display:inline-block;margin:0px 5px 0px 5px">
              <img src="{{ absolute_url(asset('lib/img/collaborator.png')) }}" class="tooltipped" data-position="top" data-tooltip="{% trans %}solution.collaborator{% endtrans %}" data-delay="50" width="25px" height="25px">
              <div class="reduced-user-filter" style="background-color:orange"></div>
            </span>
        </div>
        <p>{% trans %}solution.target_pilot.p_1.content_beginning{% endtrans %}</p>
        <p>{% trans %}solution.target_pilot.p_1.content_middle{% endtrans %}</p>
        <img src="{{ absolute_url(asset('lib/img/objectives.png')) }}" alt="" style="max-width: 75%;margin: auto;display: block;">

      </div>
      <div id="empower" class="section scrollspy">
        <div style="margin:20px 0px 30px 0px">
            <h4 style="display:inline">{% trans %}solution.empower_workforce.title{% endtrans %}</h4>
            <span style="position: relative;display:inline-block;margin:0px 10px 0px 15px">
              <img src="{{ absolute_url(asset('lib/img/manager.png')) }}" class="tooltipped" data-position="top" data-tooltip="{% trans %}solution.manager{% endtrans %}" data-delay="50" width="25px" height="25px">
              <div class="reduced-user-filter" style="background-color:indigo"></div>
            </span>
            <span style="position: relative;display:inline-block;margin:0px 10px 0px 5px">
              <img src="{{ absolute_url(asset('lib/img/collaborator.png')) }}" class="tooltipped" data-position="top" data-tooltip="{% trans %}solution.collaborator{% endtrans %}" data-delay="50" width="25px" height="25px">
              <div class="reduced-user-filter"  style="background-color:orange"></div>
            </span>
            <span style="position: relative;display:inline-block;margin:0px 5px 0px 5px">
                <img src="{{ absolute_url(asset('lib/img/hr.png')) }}" class="tooltipped" data-position="top" data-tooltip="{% trans %}solution.hr{% endtrans %}" data-delay="50" width="25px" height="25px">
                <div class="reduced-user-filter" style="background-color:yellow"></div>
            </span>
        </div>
         <p>{% trans %}solution.empower_workforce.p_1.content_beginning{% endtrans %}
