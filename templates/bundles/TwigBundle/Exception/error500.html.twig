{% extends 'layout.html.twig' %}

{% block title %}
  {{ 'error_500.page_title'|trans }}
{% endblock title %}

{% block mobile_title %}
  {{ 'error_500.page_title'|trans }}
{% endblock mobile_title %}

{% block css %}
<style>
    h1{
        margin-top:0.4rem;
    }

    .center{
        margin:auto;
    }
    .error-logo{
        font-size: 80px;
        color:#5469d4;
        position:relative
    }

    .error-logo>span{
        position:absolute;
        left:25%;
        bottom:25%;
        height:40px;
        width:40px;
        background-color:#ffbd45;
        transform:rotateZ(45deg);
        z-index: -1;
    }

    @media screen and (min-width: 660px) {

        .center{
            width: 70%;
        }
        
    }

    @media screen and (max-width: 659px) {

        h2{
            font-size: 2.5rem;
        }

        .center{
            width: 90%;
        }
        
    }


</style>
{% endblock %}

{% block content %}

    {% include "components/background_grid.html.twig" %}

    <div class="center">
        <i class="error-logo fa fa-bahai">
            <span></span>
        </i>
        <h2>{{'error_500.title'|trans}}</h2>
        <p>
           {{'error_desc <a href="link_path">link_text</a>'|replace({
               'error_desc' : 'error_500.description'|trans,
               'link_path'  : path("home_welcome"), 
               'link_text'  : 'error_500.link_text'|trans,
            })|raw
           }}
        </p>
        {#
        <p>{{ exception.file ~ ' line ' ~ exception.line }}</p>
        <p>{{ exception.message }}</p>
        #}
    </div>
{% endblock %}
