          <p>{{'cookies_policy.section_2.paragraph_3'|trans}}</p>
          <p>{{'cookies_policy.section_2.paragraph_4'|trans}}</p>
        </section> 
        <section>
          <h5 class="strong">{{'cookies_policy.section_3.title'|trans}}</h5>
