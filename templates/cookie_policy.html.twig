        </section>
        <section>
          <h5 class="strong">{{'cookies_policy.section_2.title'|trans}}</h5>
          <p>{{'cookies_policy.section_2.paragraph_1'|trans}}</p>
          <p>{{'cookies_policy.section_2.paragraph_2'|trans}}</p>
          <p>{{'cookies_policy.section_2.paragraph_3'|trans}}</p>
