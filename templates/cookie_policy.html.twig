{% extends "layout.html.twig" %}

{% block title %}
  {{'cookies_policy.title'|trans}}
{% endblock %}

{% block pagename %}
  {{'cookies_policy.title'|trans}} 
{% endblock %}

{% block css %}
  <style>
    .l-container{
      width:90%;
      margin:auto;
    }
    #linkFooter{
      width: 100%;
      background-color: #55318e;
      margin-top: 20px;
      font-size: 15px;
    }
  </style>
{% endblock %}

{% block content %}
    <main>
      <div class="l-container">
        <h4 class="center">{{'cookies_policy.title'|trans|raw}}</h4>
        <section>
          <p>{{'cookies_policy.intro_msg'|trans ~ ' :'}}</p>
          <p>www.dealdrive.com</p>
        </section>
        <section>
          <h5 class="strong">{{'cookies_policy.section_1.title'|trans}}</h5>
          <p>{{'cookies_policy.section_1.paragraph_1'|trans}}</p>
        </section>
        <section>
          <h5 class="strong">{{'cookies_policy.section_2.title'|trans}}</h5>
          <p>{{'cookies_policy.section_2.paragraph_1'|trans}}</p>
          <p>{{'cookies_policy.section_2.paragraph_2'|trans}}</p>
          <p>{{'cookies_policy.section_2.paragraph_3'|trans}}</p>
          <p>{{'cookies_policy.section_2.paragraph_4'|trans}}</p>
        </section>
        <section>
          <h5 class="strong">{{'cookies_policy.section_2.title'|trans}}</h5>
          <p>{{'cookies_policy.section_2.paragraph_1'|trans}}</p>
          <p>{{'cookies_policy.section_2.paragraph_2'|trans}}</p>
          <p>{{'cookies_policy.section_2.paragraph_3'|trans}}</p>
          <p>{{'cookies_policy.section_2.paragraph_4'|trans}}</p>
        </section> 
        <section>
          <h5 class="strong">{{'cookies_policy.section_3.title'|trans}}</h5>
          <p>{{'cookies_policy.section_3.paragraph_1'|trans}}</p>
          <p>{{'cookies_policy.section_3.paragraph_2'|trans}}</p>
          <p>{{'cookies_policy.section_3.paragraph_3'|trans}}</p>
        </section>
        <section>
          <h5 class="strong">{{'cookies_policy.section_4.title'|trans}}</h5>
          <p>{{'cookies_policy.section_4.provider_1'|trans|raw}}</p>
        </section>
      </div>
      
    </main>

    <footer>
        <div id="linkFooter">
            <div style="width:85%;margin:auto;">
                <div class="row footer-row align" style="margin-bottom:0">
                    <div class="col s12 m3 no-margin">
                        <ul class="flex-center " style="justify-content: space-around;flex-direction:column">
                            <li>
                                <img src="{{ asset('lib/img/logo_dd_l.png') }}" alt="" style="width:140px">
                            </li>

                            {#<p class="grey-text text-lighten-4">ZZYZX Road</p>#}
                            <li class="grey-text text-lighten-4">38, route d'Esch</li>
                            <li class="grey-text text-lighten-4">L-1470 Luxembourg</li>
                            
                        </ul>
                    </div>
                    <div class="col s12 m6">
                        <ul class="align" style="justify-content: space-around;">
                            <li class="linkedin">
                                <a href="https://www.linkedin.com/company/dealdrive-connect-to-clients-crm/" target="_blank">
                                    <img src="{{ asset('lib/img/linkedin-icon-white.png') }}">
                                </a>
                            </li>
                            {#
                            <li>
                                <a href="https://www.youtube.com/channel/UCMVASckl068rgTEsHC4dKsw" target="_blank">
                                    <img src="{{ asset('lib/img/youtube-white.png') }}">
                                </a>
                            </li>
                            #}
                            <li>
                                <a href="http://www.made-in-luxembourg.lu/" target="_blank">
                                    <img src="{{ asset('lib/img/made_in_white.png') }}" style="width:67px">
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col s12 m3 white-text">
                        <ul style="display:flex; justify-content: space-around;flex-direction:column; align-items: flex-end;">
                            <li style="margin-bottom:5px">
                                <span>{{ 'powered_by'|trans }}</span>
                                <i class="fa fa-road"></i>
                                <span>ZZYZX Rd</span>
                                {#}
                                <script type="text/javascript">
                                    document.write(new Date().getFullYear());
                                </script>
                                #}
                            </li>
                            {#<li class="grey-text text-lighten-4"><a href="mailto:contact@dealdrive.lu" style="color:white;">contact@dealdrive.lu</a></li>#}
                            
                            <li style="text-align:right">
                                <a href="{{ path('terms_conditions') }}" class="white-text">{% trans %}footer.tc{% endtrans %}</a>
                            </li>
                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
      </footer>

      {% if not validatedCookieBanner %}
        <div class="cookies-banner">
          <div class="flex-center"> 
            <div class="c-flex">
              <span>{{'footer.cookies_banner_msg'|trans}}</span>
              <span class="strong">{{'learn_more'|trans|capitalize}}</span>
            </div>
            <div class="btn">Ok</div>
          </div>
        </div>
      {% endif %}

{% endblock %}

{% block javascripts %}
  <script src="{{ asset('js/base.js') }}"></script>
{% endblock %}
