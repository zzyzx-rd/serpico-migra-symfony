{% extends "base.html.twig" %}

{% block title %}
    {% trans %}landing.page_name{% endtrans %}
{% endblock %}

{% block css %}
    <!-- CSS custom -->
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/homepage.css') }}">
    <!-- CSS Materialize -->
    <link rel="stylesheet" href="{{ asset('css/materialize/css/materialize.css') }}">
    <!-- CSS JQuery UI-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.css">
    <!-- Font awesome-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <!-- Materialize icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <script>
        $(function () {
            $(".video").click(function () {
                var theModal = $(this).data("target"),
                    videoSRC = $(this).attr("data-video"),
                    videoSRCauto = videoSRC + "?modestbranding=1&rel=0&controls=0&showinfo=0&html5=1&autoplay=1";
                $(theModal + ' iframe').attr('src', videoSRCauto);
                $(theModal + ' button.close').click(function () {
                    $(theModal + ' iframe').attr('src', videoSRC);
                });
            });
        });
        var rurl = "#";
        var curl = "#";
    </script>
{% endblock %}


{% block pagename %}
    Login
{% endblock %}

{% block content %}
    <ul id="hero" class="banner">
        <li class="banner-background">
            <div class="video-container">
                <div class="video-filter"></div>
                <div class="video-file">
                    <video class="video-file" poster="" autoplay loop muted>
                        <source src="" type="video/webm">
                        <source src="{{ asset('lib/img/Serpico_Pitch_video.mp4') }}" type="video/mp4">
                    </video>
                </div>
            </div>
        </li>
        <li class="vps" style="z-index:1;">
            <div class="banner-title">
                <h4 class="main-msg">{% trans %}landing.main_message.title{% endtrans %}</h4>
                <p>{% trans %}landing.main_message.additional_elmt{% endtrans %}</p>
                <a class="btn waves-effect waves-light modal-trigger" href="#videoPresentation" value="solution">
                    <ul class="flex-center">
                        <li style="margin-right: 5px"></li>
                        <li>{% trans %}landing.main_message.discover_solution{% endtrans %}</li>
                    </ul>
                </a>
            </div>
        </li>
    </ul>
    <div class="parallax">
    </div>
    <div class="" style="font-size:17px">
        <div class="row valign-wrapper" style="width:90%;flex-wrap:wrap-reverse;margin:50px auto">
            <div class="col m6 s12">
                <h4>{% trans %}landing.section_1.title{% endtrans %}</h4>
                <p>{% trans %}landing.section_1.paragraph_1{% endtrans %}</p>
                <ul style="min-height:200px;display:flex;justify-content:space-between;flex-direction:column;margin-left: 50px">
                    <li>{% trans %}landing.section_1.item_1{% endtrans %}</li>
                    <li>{% trans %}landing.section_1.item_2{% endtrans %}</li>
                    <li>{% trans %}landing.section_1.item_3{% endtrans %}</li>
                    <li>{% trans %}landing.section_1.item_4{% endtrans %}</li>
                </ul>
            </div>
            <div class="col m6 s12">
                <div style="width:80%;margin:auto">
                    <img src="{{ asset('lib/img/performance-cocreation.png') }}" alt="Circle with all firm actors" style="width:100%">
                </div>
            </div>
        </div>
        <div class="row valign-wrapper landing-section-steps">
            <div class="col m6 s12">
                <div>
                    <ul class="landing-section-steps-elements">
                        <li><span>{% trans %}landing.section_2.step_1{% endtrans %}</span></li>
                        <li><span>{% trans %}landing.section_2.step_2{% endtrans %}</span></li>
                        <li><span>{% trans %}landing.section_2.step_3{% endtrans %}</span></li>
                        <li><span>{% trans %}landing.section_2.step_4{% endtrans %}</span></li>
                        <li><span>{% trans %}landing.section_2.step_5{% endtrans %}</span></li>
                    </ul>
                </div>
            </div>
            <div class="col m6 s12">
                <h4>{% trans %}landing.section_2.title{% endtrans %}</h4>
                <p>{% trans %}landing.section_2.paragraph_1{% endtrans %}</p>
                <p>{% trans %}landing.section_2.paragraph_2{% endtrans %}</p>
            </div>
        </div>
        <div class="row valign-wrapper" style="width:90%;flex-wrap:wrap-reverse;margin:50px auto;">
            <div class="col m6 s12">
                <h4>{% trans %}landing.section_3.title{% endtrans %}</h4>
                <p>{% trans %}landing.section_3.paragraph_1{% endtrans %}</p>
                <p>{% trans %}landing.section_3.paragraph_2{% endtrans %}</p>
                <p>{% trans %}landing.section_3.paragraph_3{% endtrans %}</p>
            </div>
            <div class="col m6 s12">
                <div style="width:50%;margin:auto">
                    <img src="{{ asset('lib/img/secure-web-hosting.png') }}" alt="Secure web hosting" style="width:100%">
                </div>
            </div>
        </div>


        <div style="background: #16afb747;display:none;">

            <div class="row valign-wrapper video-platform-row" style="min-height: 400px;width: 85%;margin-bottom:0px;">

                <div class="col s12 m6">
                    <div>
                        <video id="video-steps" poster="lib/img/SerpicoSteps.gif" autoplay loop muted style="width: 95%"></video>
                    </div>
                </div>


                <div class="col s12 m6">
                    <h4> {% trans %}landing.section_4.title{% endtrans %}</h4>
                    <p>{% trans %}landing.section_4.paragraph_1{% endtrans %}</p>
                    <p>{% trans %}landing.section_4.paragraph_2{% endtrans %}</p>
                    <ul id="video-platform-buttons" style="display:flex;justify-content:space-around">
                        <a class="btn btn-flat brochure-btn waves-effect waves-light" style="margin: 0px 10px; border: 1px solid orange" name="" target="_blank" href="https://app.serpicoapp.com/lib/pdf/onboarding_brochure.pdf">{% trans %}landing.section_4.prospectus_button{% endtrans %}</a>
                        <a class="btn waves-effect waves-light" href="https://app.serpicoapp.com/fr/organizations/new" style="margin: 0px 5px;" name="" value="home">
                            <ul class="flex-center">
                                <li style="padding:0">{% trans %}header.register.public_evaluations{% endtrans %}</li>
                                <li style="margin-left:5px;padding:0"></li>
                            </ul>
                        </a>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Structures -->
    <div id="videoPresentation" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body" style="display: flex; flex-direction:column;">
                    <a class="btn-flat modal-close" data-dismiss="modal" aria-label="Close" style="margin-left: auto;padding-right:0">
                        <span aria-hidden="true"><i class="fa fa-times"></i></span>
                    </a>
                    <iframe width="100%" height="653" src="https://www.youtube.com/embed/WHkPobLf_wY" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    {#<iframe id="presVideo" width="100%" height="400" src="" frameborder="0" allowfullscreen></iframe>#}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/home.js') }}"></script>
    <script src="{{ asset('js/landing.js') }}"></script>
{% endblock %}
